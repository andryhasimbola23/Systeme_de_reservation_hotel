#:kivy 2.0.0

<Button>:
    font_name: 'Roboto'
    background_normal: ''
    background_color: self.background_color
    color: self.color
    border: (0, 0, 0, 0)
    outline_width: 0

<Label>:
    font_name: 'Roboto'

<TextInput>:
    font_name: 'Roboto'
    background_normal: ''
    background_color: self.background_color
    foreground_color: self.foreground_color
    padding: [dp(10), dp(12)]
    border: (0, 0, 0, 0)

<Spinner>:
    font_name: 'Roboto'
    background_normal: ''
    background_color: (1, 1, 1, 1)
    color: (0.12, 0.12, 0.12, 1)
    border: (1, 1, 1, 1)